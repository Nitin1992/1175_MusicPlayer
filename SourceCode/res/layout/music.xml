<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/music"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/e"
        android:textColor="@color/purple"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnShuffle1"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="17sp"
        android:background="@drawable/play3"
        android:text="@string/v" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@+id/btnShuffle1"
        android:layout_marginTop="17sp"
        android:layout_toRightOf="@+id/btnShuffle1"
        android:background="@drawable/btn2"
        android:text="@string/v" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignBaseline="@+id/btnShuffle1"
        android:layout_alignBottom="@+id/btnShuffle1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pa9"
        android:text="@string/v" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_above="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16sp"
        android:background="@drawable/stop"
        android:text="@string/v" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toLeftOf="@+id/button3"
        android:background="@drawable/btnx"
        android:text="@string/v" />
 <Button
        android:id="@+id/button6"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/h"
        android:text="@string/v" />
</RelativeLayout>